<div class="product-container">
    <h2 class="product-name"><%= @product.name %></h2>
    <p class="product-description"><%= @product.description %></p>
    <p class="product-price"><%= number_to_currency(@product.price) %></p>

    <div class="product-action">
      <%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-primary' %>
      <%= link_to 'Back', products_path, class: 'btn btn-secondary' %>
    </div>

    <div>
      <%= form_with model: Order.new, url: orders_path, local: true do |form| %>
        <%= form.hidden_field :product_id, value: @product.id %>
        <%= form.label :quantity, "Quantity:" %>
        <%= form.number_field :quantity, min: 1, class: 'form-control' %>
        <%= form.submit "Add to cart", class: 'btn btn-success mt-2' %>
      <% end %>
    </div>
</div>