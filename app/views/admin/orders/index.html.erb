<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Order ID</th>
      <th>Created At</th>
      <th>Total Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.created_at %></td>
        <td><%= number_to_currency(order.order_items.sum { |item| item.product.price * item.quantity }) %></td>
        <td>
          <%= link_to 'Show', order_path(order) %>
          <%= link_to 'Delete', order_path(order), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', admin_dashboard_path %>